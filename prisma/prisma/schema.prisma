generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id            String    @unique   @default(uuid())
  title         String
  company       String
  location      String
  description   String
  salary        String
  jobType       String
  category      String
  applyUrl      String
  postedDate    String
  source        String
  sourceId      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([source, sourceId])
  @@index([title])
  @@index([company])
  @@index([location])
  @@index([description])
  @@index([salary])
  @@index([jobType])
  @@index([category])
  @@index([postedDate])
}